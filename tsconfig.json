{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "types": ["bun-types"],
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/*", "src/server/*"],

            // Client (Discord bot) aliases.
            "@commands/*": ["src/commands/*"],
            "@constants/*": ["src/constants/*"],
            "@events/*": ["src/events/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@managers/*": ["src/managers/*"],
            "@structs/*": ["src/structs/*"],
            "@defs/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"],

            // Server (web API) aliases.
            "@routes/*": ["src/server/routes/*"]
        }
    }
}
